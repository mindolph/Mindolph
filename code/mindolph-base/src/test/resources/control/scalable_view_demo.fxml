<?xml version="1.0" encoding="UTF-8"?>

<?import com.mindolph.base.container.ScalableScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mindolph.base.control.ScalableViewDemo">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="btnSnapshot" mnemonicParsing="false" text="Task Snapshot"/>
                <CheckBox fx:id="switchDrawContent" mnemonicParsing="false" text="Draw Content"/>
                <CheckBox fx:id="showStatusBar" mnemonicParsing="false" selected="true" text="Show Status Bar"/>
            </buttons>
        </ButtonBar>
        <Label fx:id="statusBar" text="Status bar"/>
        <ScalableScrollPane fx:id="scrollPane" VBox.vgrow="ALWAYS"></ScalableScrollPane>
    </VBox>
</AnchorPane>
