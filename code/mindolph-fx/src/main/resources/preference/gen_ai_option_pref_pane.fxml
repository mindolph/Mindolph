<?xml version="1.0" encoding="UTF-8"?>

<?import com.mindolph.base.container.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root prefHeight="450.0" prefWidth="1000.0" type="AnchorPane" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <VBox>
        <PreferenceItem name="Output language:" labelMinWidth="180" labelPrefWidth="180">
            <ChoiceBox fx:id="cbLanguages" prefWidth="240.0"/>
        </PreferenceItem>
        <PreferenceItem name="Time out(second):" labelMinWidth="180" labelPrefWidth="180">
            <Spinner fx:id="spTimeOut" min="1" max="300" editable="true" prefWidth="80"/>
        </PreferenceItem>
        <Separator prefWidth="200.0"/>
        <PreferenceItem name="Vector store:" labelMinWidth="180" labelPrefWidth="180">
            <VBox spacing="8">
                <ChoiceBox fx:id="cbVectorStoreProvider" prefWidth="240.0">
                </ChoiceBox>
                <HBox spacing="8">
                    <TextField fx:id="tfHost" promptText="host" prefWidth="200" disable="true"/>
                    <Spinner fx:id="spPort" editable="true" prefWidth="80" disable="true"/>
                </HBox>
                <HBox spacing="8">
                    <TextField fx:id="tfDatabase" promptText="database" prefWidth="250" disable="true"/>
                </HBox>
                <HBox spacing="8">
                    <TextField fx:id="tfUsername" promptText="user name" prefWidth="140" disable="true"/>
                    <PasswordField fx:id="tfPassword" promptText="password" prefWidth="140" disable="true"/>
                </HBox>
                <Button fx:id="btnTestConnection" text="Test Connection" onAction="#onTestConnection"/>
            </VBox>
        </PreferenceItem>
        <Separator prefWidth="200.0"/>
        <PreferenceItem name="Default Model for generate:" labelMinWidth="180" labelPrefWidth="180">
            <ChoiceBox fx:id="cbProviderGenerate" prefWidth="140.0">
            </ChoiceBox>
            <ChoiceBox fx:id="cbModelGenerate" prefWidth="180.0">
            </ChoiceBox>
        </PreferenceItem>
        <PreferenceItem name="Default Model for summarize:" labelMinWidth="180" labelPrefWidth="180">
            <ChoiceBox fx:id="cbProviderSummarize" prefWidth="140.0">
            </ChoiceBox>
            <ChoiceBox fx:id="cbModelSummarize" prefWidth="180.0">
            </ChoiceBox>
        </PreferenceItem>
    </VBox>


</fx:root>
