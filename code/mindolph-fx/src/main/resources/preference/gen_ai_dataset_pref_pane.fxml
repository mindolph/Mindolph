<?xml version="1.0" encoding="UTF-8"?>

<?import com.mindolph.base.container.*?>
<?import com.mindolph.fx.control.WorkspaceSelector?>
<?import com.mindolph.fx.view.FileSelectView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.mindolph.mfx.control.MChoiceBox?>
<fx:root prefHeight="450.0" prefWidth="1000.0" type="AnchorPane" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <VBox>
        <PreferenceItem name="Dataset: " labelMinWidth="180" labelPrefWidth="180">
            <ChoiceBox fx:id="cbDataset" prefWidth="140.0">
            </ChoiceBox>
            <Button fx:id="btnAddDataset"/>
            <Button fx:id="btnRemoveDataset" disable="true"/>
        </PreferenceItem>
        <PreferenceItem name="Name:" labelMinWidth="180" labelPrefWidth="180">
            <TextField fx:id="tfName" prefWidth="240.0"/>
        </PreferenceItem>
        <PreferenceItem name="Language:" labelMinWidth="180" labelPrefWidth="180">
            <MChoiceBox fx:id="cbLanguage" prefWidth="240.0"/>
        </PreferenceItem>
        <PreferenceItem name="Embedding Model: " labelMinWidth="180" labelPrefWidth="180">
            <MChoiceBox fx:id="cbEmbeddingProvider" prefWidth="140.0">
            </MChoiceBox>
            <MChoiceBox fx:id="cbEmbeddingModel" prefWidth="220.0">
            </MChoiceBox>
        </PreferenceItem>
        <PreferenceItem name="Select Files: " labelMinWidth="180" labelPrefWidth="180">
            <VBox spacing="5" prefWidth="400" prefHeight="350">
                <WorkspaceSelector fx:id="workspaceSelector" prefWidth="240.0" HBox.hgrow="ALWAYS"/>
                <FileSelectView fx:id="fileSelectView" prefWidth="320" prefHeight="350"/>
                <Label fx:id="lblSelectedFiles" minWidth="250" prefWidth="400" wrapText="true"/>
            </VBox>
        </PreferenceItem>
        <PreferenceItem name="Embedding: " labelMinWidth="180" labelPrefWidth="180">
            <VBox spacing="5">
                <HBox spacing="5">
                    <Button fx:id="btnEmbedding" text="Start embedding" disable="true"/>
                    <Button fx:id="btnClear" text="Clear embedding" disable="true"/>
                </HBox>
                <ProgressBar fx:id="pbProgress" prefHeight="8.0" prefWidth="250" visible="false"/>
                <Label fx:id="lblEmbeddingStatus"/>
            </VBox>
        </PreferenceItem>
    </VBox>

</fx:root>
