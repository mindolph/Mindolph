<?xml version="1.0" encoding="UTF-8"?>

<?import com.mindolph.base.container.PreferenceItem?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import com.mindolph.fx.control.DatasetTableView?>
<fx:root prefHeight="450.0" prefWidth="1000.0" type="AnchorPane" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <VBox>
        <PreferenceItem name="Agent: " labelMinWidth="180" labelPrefWidth="180">
            <ChoiceBox fx:id="cbAgent" prefWidth="140.0">
            </ChoiceBox>
            <Button fx:id="btnAddAgent"/>
            <Button fx:id="btnRemoveAgent"/>
        </PreferenceItem>
        <PreferenceItem name="Description:" labelMinWidth="180" labelPrefWidth="180">
            <TextField fx:id="tfDescription" prefWidth="240.0"/>
        </PreferenceItem>
        <PreferenceItem name="Language:" labelMinWidth="180" labelPrefWidth="180">
            <ChoiceBox fx:id="cbLanguage" prefWidth="240.0"/>
        </PreferenceItem>
        <PreferenceItem name="Embedding Model: " labelMinWidth="180" labelPrefWidth="180">
            <ChoiceBox fx:id="cbEmbeddingProvider" prefWidth="140.0">
            </ChoiceBox>
            <ChoiceBox fx:id="cbEmbeddingModel" prefWidth="180.0">
            </ChoiceBox>
        </PreferenceItem>
        <PreferenceItem name="Chat Model: " labelMinWidth="180" labelPrefWidth="180">
            <ChoiceBox fx:id="cbChatProvider" prefWidth="140.0">
            </ChoiceBox>
            <ChoiceBox fx:id="cbChatModel" prefWidth="180.0">
            </ChoiceBox>
        </PreferenceItem>
        <PreferenceItem name="Prompt: " labelMinWidth="180" labelPrefWidth="180">
            <TextArea fx:id="taAgentPrompt" prefWidth="280.0" prefRowCount="10" prefColumnCount="100" wrapText="true"
                      promptText="Describe the agent's characteristics, capabilities, preferences, and anything else that can make the agent's answer more in line with your requirements">
            </TextArea>
        </PreferenceItem>
        <PreferenceItem name="Datasets: " labelMinWidth="180" labelPrefWidth="180">
            <DatasetTableView fx:id="tvDatasets" minHeight="80.0" minWidth="220.0" prefHeight="150.0" prefWidth="350.0">
            </DatasetTableView>
            <Button fx:id="btnSetDataset"/>
        </PreferenceItem>
    </VBox>

</fx:root>
