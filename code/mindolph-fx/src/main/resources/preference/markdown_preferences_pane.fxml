<?xml version="1.0" encoding="UTF-8"?>

<?import com.mindolph.base.container.PreferenceItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<fx:root prefHeight="400.0" prefWidth="900.0" type="AnchorPane" xmlns="http://javafx.com/javafx/18"
         xmlns:fx="http://javafx.com/fxml/1">
   <VBox prefHeight="361.0" prefWidth="555.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <PreferenceItem name="Font file path for export to PDF:">
      </PreferenceItem>
      <PreferenceItem name="Sans-serif:">
         <HBox spacing="4">
            <TextField fx:id="tfSansFontFile" minWidth="200.0" prefWidth="400.0"/>
            <Button fx:id="btnSelectSans" mnemonicParsing="false" text="Select"/>
         </HBox>
      </PreferenceItem>
      <PreferenceItem name="Fixed-width:">
         <HBox spacing="4">
            <TextField fx:id="tfMonoFontFile" minWidth="200.0" prefWidth="400.0"/>
            <Button fx:id="btnSelectMono" mnemonicParsing="false" text="Select"/>
         </HBox>
      </PreferenceItem>
   </VBox>
</fx:root>
